<Window x:Class="WeatherManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherManagement"
        mc:Ignorable="d"
        Title="Wetterverwaltung" Height="600" Width="800">
    <Grid>
        <Menu x:Name="menu" Height="19" VerticalAlignment="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Speichern"/>
                <MenuItem Header="Öffnen"/>
            </MenuItem>
            <MenuItem Header="Daten" Click="menuItemDataCaptureWeather">
                <MenuItem Header="Wetter Erfassen"></MenuItem>
            </MenuItem>
        </Menu>
        <Canvas x:Name="canvas" Width="500" Height="200" Margin="150,24,150,360"/>

    </Grid>
</Window>
